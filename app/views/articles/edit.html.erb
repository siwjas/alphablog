<h1>Create a new Article</h1>

<% if @article.errors.any? %>
  <h2>The following erros prented the article from being saved!</h2>
  <ol>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :descriptions %><br>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %> | <%= link_to 'Cancel', articles_path %> 

<% end %>