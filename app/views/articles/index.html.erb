<div class="container">
  <h1>Articles listing page</h1>

  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col" colspan='3'>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>      
          <td><%= article.description %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Delete', article, method: :delete, data: {confirm: 'Shure?'}%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <nav class="nav">
    <div class='nav-link'><%= link_to 'New Article', new_article_path, class: 'btn btn-info btn-sm' %></div>
    <div class='nav-link'><%= link_to 'Home page', root_path, class: 'btn btn-info btn-sm' %></div>    
  </nav>

</div>
