<div class="form">
  <% if @article.errors.any? %>
    <h2>The following erros prented the article from being saved!</h2>
    <ol>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  <% end %>

  <%= form_with(model: @article, local: true) do |f| %>
    <div class="form form-group">
      <p class="input">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control' %>
      </p>
      <p class="input">
        <%= f.label :descriptions %><br>
        <%= f.text_area :description, class: 'form-control', rows:"3" %>
      </p>
    </div>

    <nav class="nav form">
      <div class='nav-link'><%= f.submit %></div>
      <div class='nav-link'><%= link_to 'Cancel', articles_path, class: 'btn btn-info btn-sm' %></div>    
    </nav>
  <% end %>
</div>

