<div class='container'>
  <div class="form">    
    <div class="row justify-content-center">
      <div class="col-10">

        <%= render 'shared/errors' %>
        
        <%= form_with(model: @article, class: 'shadow-sm mb-3 p-3 bg-info rounded', local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: 'col-sm-2 col-form-label text-white' %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: 'form-control shadow-sm rounded', placeholder: 'Title of article' %>
            </div>      
          </div>
    
          <div class="form-group row">
            <%= f.label :descriptions, class: 'col-sm-2 col-form-label text-white' %>
            <div class="col-sm-10">
              <%= f.text_area :description, class: 'form-control shadow-sm rounded', 
                  rows: '10', placeholder: 'Description of article'  %>
            </div>
          </div>
    
          <div class="form-group row justify-content-center">
            <%= f.submit class: 'btn btn-outline-light btn-lg ml-2 shadow-sm' %>    
          </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to Article listing ]', articles_path, class: 'text-info' %>
      </div>
    </div>    
  </div>

</div>

