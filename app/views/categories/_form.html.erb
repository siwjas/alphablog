<div class='container'>
  <div class="form">    
    <div class="row justify-content-center">
      <div class="col-10">

        <%= render 'shared/errors', obj: @category %>
        
        <%= form_with(model: @category, class: 'shadow-sm mb-3 p-3 bg-info rounded', local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :name, "Category name", class: 'col-sm-2 col-form-label text-white' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control shadow-sm rounded', 
                  placeholder: 'Enter a category name' %>
            </div>      
          </div>
    
          <div class="form-group row justify-content-center">
            <%= f.submit class: 'btn btn-outline-light btn-lg ml-2 shadow-sm' %>
          </div>
        <% end %>
      </div>      
    </div> 
    
    <div class="row justify-content-center">
      <div class="col-sm-12 text-center">
        <%= link_to '[ Cancel and return to Categories page ]', categories_path, class: 'text-info' %>
      </div>
    </div>
    
  </div>

</div>

